<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1080dp"
    android:layout_height="800dp"
    android:background="@color/background_main"
    android:padding="20dp">

    <!-- Header with Back Button -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="@string/back"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_back"
            android:elevation="3dp" />

    </LinearLayout>

    <!-- Main Content Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_layout"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <!-- Left Panel - Instructions -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="10dp"
            android:background="@color/background_secondary"
            android:padding="40dp"
            android:elevation="4dp">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/terminal_payment_title"
                android:textSize="32sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- Status -->
            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/processing_payment"
                android:textSize="24sp"
                android:textColor="@color/accent_blue"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- Instructions -->
            <TextView
                android:id="@+id/tv_instructions"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@string/terminal_instructions"
                android:textSize="20sp"
                android:textColor="@color/text_secondary"
                android:gravity="center_vertical"
                android:lineSpacingExtra="8dp" />

        </LinearLayout>

        <!-- Right Panel - Payment Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:background="@color/background_secondary"
            android:padding="40dp"
            android:elevation="4dp"
            android:gravity="center">

            <!-- Payment Icon/Illustration -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@color/accent_blue"
                android:gravity="center"
                android:layout_marginBottom="40dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="💳"
                    android:textSize="80sp"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Payment Amount Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="24dp"
                android:layout_marginBottom="30dp"
                android:elevation="3dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="支付金额"
                    android:textSize="18sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¥5.00"
                    android:textSize="36sp"
                    android:textColor="@color/accent_orange"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- Service Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/background_main"
                android:padding="20dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="租借时长: 24小时"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="请在支付终端上完成支付"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
