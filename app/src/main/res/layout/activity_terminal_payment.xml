<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="horizontal"
    android:background="@color/background_main">

    <!-- Left Panel - 1/3 width -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/background_secondary"
        android:padding="40dp">

        <!-- Back Button -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:text="@string/back"
            android:textSize="16sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/btn_back"
            android:layout_marginBottom="40dp" />

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/terminal_payment_title"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/processing_payment"
            android:textSize="20sp"
            android:textColor="@color/button_primary"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <!-- Instructions -->
        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/terminal_instructions"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center_vertical"
            android:lineSpacingExtra="6dp" />

    </LinearLayout>

    <!-- Right Panel - 2/3 width -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:background="@color/background_main"
        android:padding="40dp"
        android:gravity="center">

        <!-- Payment Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付提示"
            android:textSize="32sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="40dp" />

        <!-- Payment Icon/Illustration -->
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/button_primary"
            android:gravity="center"
            android:layout_marginBottom="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="💳"
                android:textSize="80sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- Payment Amount -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支付金额: ¥5.00"
            android:textSize="28sp"
            android:textColor="@color/button_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Service Details -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="租借时长: 24小时"
            android:textSize="20sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="请在支付终端上完成支付操作"
            android:textSize="18sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>
