<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="vertical"
    android:background="@color/background_main">

    <!-- 顶部进度条 -->
    <com.stwpower.powertap.HighPerformanceProgressBar
        android:id="@+id/progress_timer"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Panel - 1/3 width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:padding="40dp">

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/back"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="#868D91"
                android:layout_marginBottom="40dp"
                android:elevation="5dp" />

            <!-- 第一块：pricing -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PRICING"
                android:textSize="30sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- 第二块：价格信息（两列布局） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <!-- 左列：60分钟价格 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.00$"
                        android:textSize="40sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/60minutes"
                        android:textSize="28sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start" />

                </LinearLayout>

                <!-- 右列：1天价格 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15.00$"
                        android:textSize="40sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/ 1 day"
                        android:textSize="28sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第三块：TEMPORARY DEPOSIT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TEMPORARY DEPOSIT"
                android:textSize="30sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- 第四块：押金价格 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20.00$"
                android:textSize="40sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- 说明区域：占满剩余空间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 第五块：说明1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Deposit will be refunded when powerbank is returned"
                    android:textSize="25sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:gravity="center_vertical" />

                <!-- 第六块：说明2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Additional charges may apply for late returns or damage"
                    android:textSize="25sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Panel - 2/3 width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/background_main"
            android:padding="40dp"
            android:gravity="center">

            <!-- 上半部分：两个文本区域 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="80dp">

                <!-- 标题 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Tap your card or phone on the terminal."
                    android:textSize="70sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:gravity="center" />

                <!-- 说明文字 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Not contactless card? Card reader below keypad"
                    android:textSize="25sp"
                    android:textColor="@color/text_secondary"
                    android:gravity="center" />
            </LinearLayout>
            <!-- Image -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/terminal_tap_to_pay"
                android:scaleType="fitCenter"
                android:padding="40dp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
