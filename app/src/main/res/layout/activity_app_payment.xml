<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="vertical"
    android:background="@color/background_main">

    <!-- 顶部进度条 -->
    <com.stwpower.powertap.ui.HighPerformanceProgressBar
        android:id="@+id/progress_timer"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <!-- 主要内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- Left Panel - 1/3 width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/background_secondary"
            android:padding="40dp">

            <!-- Back Button -->
            <Button
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="@string/back"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="#868D91"
                android:layout_marginBottom="40dp"
                android:elevation="5dp" />

            <!-- 第一块：pricing -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pricing"
                android:textSize="30sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- 第二块：价格信息（两列布局） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <!-- 左列：单位时间价格 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="10dp">

                    <TextView
                        android:id="@+id/price_per_hour_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.00$"
                        android:textSize="40sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/price_per_hour_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/60 Min"
                        android:textSize="28sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start" />

                </LinearLayout>

                <!-- 右列：每天最大金额 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                    <TextView
                        android:id="@+id/price_per_day_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="15.00$"
                        android:textSize="40sp"
                        android:textColor="@color/text_primary"
                        android:textStyle="bold"
                        android:gravity="start" />

                    <TextView
                        android:id="@+id/price_per_day_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="/1 Day"
                        android:textSize="28sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="start" />

                </LinearLayout>

            </LinearLayout>

            <!-- 第三块：TEMPORARY DEPOSIT -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temporary_deposit"
                android:textSize="30sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <!-- 第四块：押金价格 -->
            <TextView
                android:id="@+id/deposit_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="20.00$"
                android:textSize="40sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- 说明区域：占满剩余空间 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- 第五块：说明1 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/deposit_refund_info"
                    android:textSize="25sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:gravity="center_vertical" />

                <!-- 第六块：说明2 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/additional_charges_info"
                    android:textSize="25sp"
                    android:textColor="@color/text_secondary"
                    android:lineSpacingExtra="2dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right Panel - 2/3 width -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:background="@color/background_main"
            android:padding="40dp"
            android:gravity="center">

            <!-- QR Code Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/scan_qr_code_payment"
                android:textSize="32sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- QR Code Container with Loading State -->
            <FrameLayout
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@color/background_main"
                android:layout_marginBottom="20dp">

                <!-- QR Code Image -->
                <ImageView
                    android:id="@+id/iv_qr_code"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/background_main"
                    android:scaleType="centerInside"
                    android:padding="20dp"
                    android:visibility="gone" />

                <!-- Loading State Layout -->
                <LinearLayout
                    android:id="@+id/qr_loading_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible">

                    <!-- Loading Progress Bar (no text below) -->
                    <ProgressBar
                        android:id="@+id/qr_loading_progress"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:indeterminateTint="@color/button_primary" />

                </LinearLayout>

            </FrameLayout>

            <!-- QR Code Instructions -->
            <TextView
                android:id="@+id/tv_qr_code_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="qrCode"
                android:textSize="24sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>