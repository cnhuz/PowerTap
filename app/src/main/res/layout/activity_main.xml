<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="horizontal"
    android:background="@color/background_main">

    <!-- Left Side Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="40dp">

        <!-- Upper Text Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="40dp">

            <!-- Main Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PowerTap 充电宝租借"
                android:textSize="36sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:layout_marginBottom="20dp" />

            <!-- Description -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_description"
                android:textSize="18sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingExtra="6dp"
                android:layout_marginBottom="20dp" />

            <!-- Price Info -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="租借费用: ¥5.00/24小时"
                android:textSize="20sp"
                android:textColor="@color/button_primary"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Lower Button Area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Terminal Payment Text Button -->
            <TextView
                android:id="@+id/btn_pay_terminal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/pay_with_terminal"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:background="@color/button_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true" />

            <!-- App Payment Text Button -->
            <TextView
                android:id="@+id/btn_pay_app"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/pay_with_app"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:background="@color/button_primary"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Side Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Language Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="20dp">

            <ImageButton
                android:id="@+id/btn_english"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_en"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/btn_chinese"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_cn"
                android:scaleType="centerCrop" />

            <ImageButton
                android:id="@+id/btn_japanese"
                android:layout_width="50dp"
                android:layout_height="35dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_jp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <!-- Background Image Area -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/main_illustration"
            android:scaleType="centerInside"
            android:layout_margin="20dp" />

    </LinearLayout>

</LinearLayout>