<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:orientation="horizontal"
    android:background="@color/background_main">

    <!-- Left Side Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5.5"
        android:orientation="vertical">

        <!-- Text Area - Fixed Height (60% of left side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="45dp"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            >

            <!-- 品牌名 - Fixed Height -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="STW"
                android:textSize="63sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="0.9" />

            <!-- Fixed Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <!-- Main Title - Fixed Height -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:text="RENT A\nPOWERBANK"
                android:textSize="80sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="0.9" />

            <!-- Fixed Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <!-- Price Info - Fixed Height -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="5.00$ / 60minutes"
                android:textSize="45sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:gravity="center_vertical" />

        </LinearLayout>

        <!-- Button Area - Fixed Height (40% of left side) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            >

            <!-- Terminal Payment Text Button -->
            <TextView
                android:id="@+id/btn_pay_terminal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/pay_with_terminal"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:background="@color/button_primary"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:elevation="5dp" />

            <!-- OR text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="10dp"/>

            <!-- App Payment Text (just text, no button style) -->
            <TextView
                android:id="@+id/btn_pay_app"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_with_app"
                android:textSize="20sp"
                android:textColor="@color/text_primary"
                android:textStyle="normal"
                android:clickable="true"
                android:focusable="true" />

        </LinearLayout>

    </LinearLayout>

    <!-- Right Side Content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4.5"
        android:orientation="vertical">

        <!-- Language Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="80dp">

            <ImageButton
                android:id="@+id/btn_english"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_en"
                android:scaleType="centerCrop"
                android:elevation="3dp"
                android:clipToOutline="true" />

            <ImageButton
                android:id="@+id/btn_chinese"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_cn"
                android:scaleType="centerCrop"
                android:elevation="3dp"
                android:clipToOutline="true" />

            <ImageButton
                android:id="@+id/btn_japanese"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_jp"
                android:scaleType="centerCrop"
                android:elevation="3dp"
                android:clipToOutline="true" />

            <ImageButton
                android:id="@+id/btn_german"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_de"
                android:scaleType="centerCrop"
                android:elevation="3dp"
                android:clipToOutline="true" />

            <ImageButton
                android:id="@+id/btn_russian"
                android:layout_width="72dp"
                android:layout_height="54dp"
                android:background="@drawable/btn_language"
                android:src="@drawable/ic_flag_ru"
                android:scaleType="centerCrop"
                android:elevation="3dp"
                android:clipToOutline="true" />

        </LinearLayout>

        <!-- Background Image Area -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/main_illustration"
            android:scaleType="fitCenter"
            android:padding="80dp" />

    </LinearLayout>

</LinearLayout>