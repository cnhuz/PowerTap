<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下状态 -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/background_secondary" />
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="@color/text_primary" />
        </shape>
    </item>

    <!-- 正常状态 -->
    <item>
        <shape>
            <solid android:color="@color/button_language" />
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="@color/button_language_border" />
        </shape>
    </item>
</selector>